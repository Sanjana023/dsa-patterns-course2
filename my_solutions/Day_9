#Split a Linked List into two halves

class Solution {
    public Pair<Node, Node> splitList(Node head) {
        // Code here
        Node slow = head, fast = head.next;
        
        while(fast != head && fast.next != head)
        {
            slow = slow.next;
            fast = fast.next;
            
            if(fast.next != head)
            fast = fast.next;
        }
        fast.next = slow.next;
        slow.next = head;
        
        return new Pair<>(head, fast.next);
    }
}
